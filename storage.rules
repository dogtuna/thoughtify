rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Publicly readable avatars, only the owner can write their own.
    match /avatars/{uid} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Default: deny everything else unless you explicitly add rules.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

